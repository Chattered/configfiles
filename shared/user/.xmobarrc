Config { font = "xft:Times New Roman-10:italic"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = True
       , overrideRedirect = False
       , commands =
         [ Run Weather "EGPH" ["-t","<station>: <tempC>C","-L","18","-H","25"
                              ,"--normal","green","--high","red","--low","lightblue"]
           36000
         , Run Network "eth0" ["-L","0","-H","32","--normal","green","--high","red"]
           10
         , Run Network "wlan0" ["-L","0","-H","32","--normal","green","--high","red"]
           10
         , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
         , Run Memory ["-t","Mem: <usedratio>%"] 10
         , Run Swap [] 10
         , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
         , Run TopProc ["-t","p1:<mname1>, p2:<mname2>"] 10
         , Run StdinReader
         , Run BatteryP ["BAT1"] [] 10
         ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% | %cpu% | %memory% * %swap% | %eth0% | %wlan0% | %top% }{ <fc=#ee9a00>%date%</fc>| %EGPH% | %battery% "
       }
